Date : 1/23/2026

1. select * 
from sakila.customer
where first_name like 'J%' and active =1 ;


2. select * 
from sakila.film;
where title like 'Action' and description like '%WAR%';


3. select * 
from sakila.customer
where first_name like '%a' and last_name not in  ('SMITH');

4. select * 
from sakila.film
where rental_rate > 3.0 and replacement_cost is not NULL;

5. select count(*)
from sakila.customer
where active =1 ;

6. select distinct rating
from sakila.film;

7. select  rental_duration, count(*)  
from sakila.film
group by rental_duration
having avg(length)>100
order by rental_duration ;


8. SELECT DATE(payment_date) AS payment_day,
       COUNT(*) AS total_payments,
       SUM(amount) AS total_amount
FROM sakila.payment
GROUP BY DATE(payment_date)
HAVING COUNT(*) > 100
ORDER BY payment_day;


9. select first_name , last_name
from sakila.customer
where email is NULL or email like '%.org';

10. select *
from sakila.film
where rating in ('PG' , 'G')
order by rental_rate desc;


11. SELECT length,
       COUNT(*) AS film_count
FROM sakila.film
WHERE title LIKE 'T%'
GROUP BY length
HAVING COUNT(*) > 5
ORDER BY length;


12. SELECT a.actor_id,
       a.first_name,
       a.last_name,
       COUNT(fa.film_id) AS film_count
FROM sakila.actor a
JOIN sakila.film_actor fa
  ON a.actor_id = fa.actor_id
GROUP BY a.actor_id, a.first_name, a.last_name
HAVING COUNT(fa.film_id) > 10
ORDER BY film_count DESC;



13. SELECT film_id,
       title,
       rental_rate,
       length
FROM sakila.film
ORDER BY rental_rate DESC, length DESC
limit 5;


14. SELECT c.customer_id,
       c.first_name,
       c.last_name,
       COUNT(r.rental_id) AS total_rentals
FROM sakila.customer c
LEFT JOIN sakila.rental r
  ON c.customer_id = r.customer_id
GROUP BY c.customer_id, c.first_name, c.last_name
ORDER BY total_rentals DESC;



15. SELECT f.film_id,
       f.title
FROM sakila.film f
LEFT JOIN sakila.inventory i
  ON f.film_id = i.film_id
LEFT JOIN sakila.rental r
  ON i.inventory_id = r.inventory_id
WHERE r.rental_id IS NULL;

